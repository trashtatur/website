{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "jsx": "react",
    "target": "es6",
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}